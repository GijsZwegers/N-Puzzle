                <Button Name="TrollPuzzle" Tag="Troll" Click="Puzzle_Click" Content="Troll" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
                <Button Name="KingBlackDragonPuzzle" Tag="King Black Dragon" Click="Puzzle_Click" Content="KBD" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
                <Button Name="CorporealBeastPuzzle" Tag="Corporeal Beast" Click="Puzzle_Click" Content="Corp" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
            </StackPanel>-->
        </ScrollViewer>
        
        <Frame Grid.Row="1" Grid.Column="1" Name="ContentFrame" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Page>
